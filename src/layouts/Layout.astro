---
// css
import "../scss/global.scss";

// components
import Header from "../components/sections/Header.astro";
import Footer from "../components/sections/Footer.astro";

// astro props
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Z6GSZ03H83"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-Z6GSZ03H83");
    </script>

    <!-- Hotjar Tracking Code for amparo.codes -->
    <script>
      (function (h, o, t, j, a, r) {
        h.hj =
          h.hj ||
          function () {
            (h.hj.q = h.hj.q || []).push(arguments);
          };
        h._hjSettings = { hjid: 3547652, hjsv: 6 };
        a = o.getElementsByTagName("head")[0];
        r = o.createElement("script");
        r.async = 1;
        r.src = t + h._hjSettings.hjid + j + h._hjSettings.hjsv;
        a.appendChild(r);
      })(window, document, "https://static.hotjar.com/c/hotjar-", ".js?sv=");
    </script>

    <!-- Meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Explore the portfolio of Amparo, a UK-based frontend developer with a background in UX and content, and a passion for accessibility."
    />

    <!-- Facebook Meta Tags -->
    <meta
      property="og:url"
      content="https://amparo-portfolio-wip.netlify.app/"
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Amparo | Frontend Developer - amparo.codes"
    />
    <meta
      property="og:description"
      content="Explore the portfolio of Amparo, a UK-based frontend developer with a background in UX and content, and a passion for accessibility."
    />
    <meta
      property="og:image"
      content="https://amparo-portfolio-wip.netlify.app/meta-image.png"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      property="twitter:domain"
      content="amparo-portfolio-wip.netlify.app"
    />
    <meta
      property="twitter:url"
      content="https://amparo-portfolio-wip.netlify.app/"
    />
    <meta
      name="twitter:title"
      content="Amparo | Frontend Developer - amparo.codes"
    />
    <meta
      name="twitter:description"
      content="Explore the portfolio of Amparo, a UK-based frontend developer with a background in UX and content, and a passion for accessibility."
    />
    <meta
      name="twitter:image"
      content="https://amparo-portfolio-wip.netlify.app/meta-image.png"
    />
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#1b5883" />
    <meta name="msapplication-TileColor" content="#adddff" />
    <meta name="theme-color" content="#adddff" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

---
// css
import "../scss/global.scss";

// components
import Header from "../components/sections/Header.astro";
import Footer from "../components/sections/Footer.astro";

// astro props
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- umami -->
    <script
      async
      src="https://analytics.umami.is/script.js"
      data-website-id="247d0fe1-29d4-4f65-a4d4-f88185376a46"></script>

    <!-- Meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Explore the portfolio of Amparo, a UK-based frontend developer with a background in UX and content, and a passion for accessibility."
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://amparo.codes" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Amparo | Frontend Developer - amparo.codes"
    />
    <meta
      property="og:description"
      content="Explore the portfolio of Amparo, a UK-based frontend developer with a background in UX and content, and a passion for accessibility."
    />
    <meta property="og:image" content="https://amparo.codes/meta-image.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="https://amparo.codes" />
    <meta property="twitter:url" content="https://amparo.codes" />
    <meta
      name="twitter:title"
      content="Amparo | Frontend Developer - amparo.codes"
    />
    <meta
      name="twitter:description"
      content="Explore the portfolio of Amparo, a UK-based frontend developer with a background in UX and content, and a passion for accessibility."
    />
    <meta name="twitter:image" content="https://amparo.codes/meta-image.png" />
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#1b5883" />
    <meta name="msapplication-TileColor" content="#adddff" />
    <meta name="theme-color" content="#adddff" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
